<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:contentDescription="content desc"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".KayitEkrani"
    >



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="content desc"
        >

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="410dp"
            android:layout_centerInParent="true"
            tools:layout_editor_absoluteX="52dp"
            tools:layout_editor_absoluteY="93dp">

            <android.support.v7.widget.CardView
                android:layout_width="280dp"
                android:layout_height="380dp"
                android:alpha="0.85"
                app:cardBackgroundColor="#fff"
                app:cardCornerRadius="6dp"
                app:cardElevation="6dp">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Kaydol"
                            android:textColor="@color/colorAccent"
                            android:textSize="25dp"
                            android:textStyle="bold" />

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/tilkaydolAdSoyad"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="7dp">

                            <android.support.design.widget.TextInputEditText
                                android:id="@+id/kaydolAdSoyad"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:hint="İsim"
                                android:imeOptions="actionNext"
                                android:inputType="textPersonName"
                                android:textAllCaps="true" />
                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/tilkaydolKadi"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="7dp">

                            <android.support.design.widget.TextInputEditText
                                android:id="@+id/kaydolKadi"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:hint="Kullanıcı Adı"
                                android:imeOptions="actionNext"
                                android:inputType="text" />
                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/tilkaydolEposta"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="7dp">

                            <android.support.design.widget.TextInputEditText
                                android:id="@+id/kaydolEposta"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:hint="E posta"
                                android:imeOptions="actionNext"
                                android:inputType="textEmailAddress" />
                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/tilkaydolSifre"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="7dp">

                            <android.support.design.widget.TextInputEditText
                                android:id="@+id/kaydolSifre"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:hint="Şifre"
                                android:imeOptions="actionNext"
                                android:inputType="textPassword" />
                        </android.support.design.widget.TextInputLayout>


                    </LinearLayout>
                </ScrollView>
            </android.support.v7.widget.CardView>

            <Button
                android:id="@+id/kaydolbtn"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginTop="-27dp"
                tools:ignore="VectorDrawableCompat" />
        </FrameLayout>

        <TextView
            android:id="@+id/zatenbirhesabimvar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="28dp"
            android:text="Zaten hesabım var"
            android:textColor="#fff"
            android:textSize="15dp" />


    </RelativeLayout>

</FrameLayout>