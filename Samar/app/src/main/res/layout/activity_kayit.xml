<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".KayitActivity">

    <ImageView
        android:id="@+id/imagekayit"
        android:src="@drawable/bg2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@null"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="410dp"
            android:layout_centerInParent="true"
            tools:layout_editor_absoluteX="52dp"
            tools:layout_editor_absoluteY="93dp">

            <android.support.v7.widget.CardView
                android:layout_width="280dp"
                android:layout_height="380dp"
                android:alpha="0.85"
                app:cardBackgroundColor="@color/cardbg"
                app:cardCornerRadius="6dp"
                app:cardElevation="6dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Kaydol"
                        android:textColor="@color/colorAccent"
                        android:textSize="25dp"
                        android:textStyle="bold" />

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/tiladkayit"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="7dp">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/adkayit"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:hint="İsim"
                            android:imeOptions="actionNext"
                            android:inputType="textPersonName"
                            android:textAllCaps="true" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/tilsoyadkayit"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="7dp">

                        <android.support.design.widget.TextInputEditText

                            android:id="@+id/soyadkayit"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:hint="Soyisim"
                            android:imeOptions="actionNext"
                            android:inputType="textPersonName" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/tilkuladi"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="7dp">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/kuladi"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:hint="Kullanıcı Adı"
                            android:imeOptions="actionNext"
                            android:inputType="text" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/tileposta"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="7dp">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/eposta"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:hint="E posta"
                            android:imeOptions="actionNext"
                            android:inputType="textEmailAddress" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/tilsifrekayit"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="7dp">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/sifrekayit"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:hint="Şifre"
                            android:imeOptions="actionNext"
                            android:inputType="textPassword" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/tilsifrekayit2"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="7dp">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/sifrekayit2"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:hint="Şifre (Tekrar)"
                            android:imeOptions="actionDone"
                            android:inputType="textPassword" />
                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.design.widget.FloatingActionButton
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginTop="-27dp"
                app:srcCompat="@drawable/check"
                tools:ignore="VectorDrawableCompat" />
        </FrameLayout>

        <Button
            android:id="@+id/kaydet"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="14dp" />


    </RelativeLayout>

</FrameLayout>